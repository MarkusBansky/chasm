{
  "compilerOptions": {
    "rootDir": "./src",
    "outFile": "./dist/index.js",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "amd",
    "target": "es3",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
